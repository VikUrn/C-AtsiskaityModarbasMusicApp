@model MusicAppModels.Music

@{
    ViewData["Title"] = "Delete";
}

<h2> Ištrinimas </h2>

<h4>Ar tikrai nori ištrinti šią dainą?</h4>
<div>
    <h4> @Html.DisplayFor(model => model.Performer) - @Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Performer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Performer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MusicId" />
        <input type="submit" value="Trinti" class="btn btn-danger" /> |
        <a asp-action="Index"> Atgal į dainų sąrašą </a>
    </form>
</div>
